{
  "Routes": [
    {
      // 1. Identity 服务路由配置
      // 前端访问: http://localhost:5000/auth/login
      // 转发目标: http://localhost:5001/api/auth/login

      "UpstreamPathTemplate": "/auth/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete" ],

      "DownstreamScheme": "http",
      "DownstreamPathTemplate": "/api/auth/{everything}",
      "DownstreamHostAndPorts": [
        {
          //"这里有个大坑：
          //Ocelot" "里的","localhost" "在","Docker" "里是行不通的。",
          //"在" "Docker","网络里，网关想找" "Identity","服务，必须用它的服务名" "identity-api（即","docker-compose.yml" "里的","service" "名字）",
          "Host": "identity-api",
          "Port": 5001
        }
      ]
    },
    {
      // 2. Product 服务路由配置
      // 前端访问: http://localhost:5000/product
      // 转发目标: http://localhost:5002/api/product

      "UpstreamPathTemplate": "/product/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete" ],

      "DownstreamScheme": "http",
      "DownstreamPathTemplate": "/api/product/{everything}",
      "DownstreamHostAndPorts": [
        {
          "Host": "product-api",
          "Port": 5002
        }
      ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5000"
  }
}